---
const { word = "" } = Astro.props;
let COLORS = [
  "teal-400",
  "red-400",
  "orange-400",
  "yellow-400",
  "lime-400",
  "green-400",
  "teal-400",
  "cyan-400",
  "sky-400",
  "blue-400",
  "indigo-400",
  "violet-400",
  "red-400",
  "orange-400",
  "yellow-400",
  "lime-400",
  "green-400",
  "teal-400",
  "cyan-400",
  "sky-400",
  "blue-400",
  "indigo-400",
  "violet-400",
];

let letters = word.split("");
let delay = 50;
let spans = letters.map((letter, index) => {
  let color = COLORS[index % COLORS.length];
  let style = `transition duration-100 group-hover/korok:-translate-y-px delay-[${delay}ms]`;
  delay += 25;
  return `<span class="group-hover/korok:text-teal-400 ${style}" aria-hidden="true">${letter}</span>`;
});
---

<span
  class="group/korok inline-flex font-medium text-teal-400"
  set:html={spans.join("")}
/>
