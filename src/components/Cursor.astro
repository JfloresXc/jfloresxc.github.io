<div class="mover"></div>

<style>
  .mover {
    background: radial-gradient(circle, rgba(128, 128, 128, 0.15) 0%, rgba(128, 128, 128, 0.08) 40%, rgba(128, 128, 128, 0.02) 70%, transparent 100%);
    border: none;
    box-shadow: 
      0 0 20px rgba(128, 128, 128, 0.1),
      0 0 40px rgba(128, 128, 128, 0.05),
      inset 0 0 30px rgba(255, 255, 255, 0.03);
    backdrop-filter: blur(2px);
    border-radius: 50%;
    position: fixed;
    top: 0px;
    left: 0px;
    z-index: -9999;
    will-change: transform;
    pointer-events: none;
  }
  .mover {
    width: 80px;
    height: 80px;
    transform: translate(
        calc(var(--mouse-x) - 40px),
        calc(var(--mouse-y) - 40px)
      )
      translateZ(0);
    transition: none;
  }

  @media screen and (max-width: 600px) {
    .mover,
    .mover1,
    .mover2,
    .mover3 {
      display: none;
    }
  }
</style>

<script>
  let mover: HTMLElement = document.querySelector(".mover");

  document.addEventListener("mousemove", (e) => {
    mover.style.setProperty("--mouse-x", e.clientX + "px");
    mover.style.setProperty("--mouse-y", e.clientY + "px");
  });

